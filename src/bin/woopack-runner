#!/bin/sh -e
target=$1
disableSHTasks=false
isSHTask=true
if [ "$target" = "" ]; then
  woopack-runner-cli --help
else
  if echo "$task" | grep -q "^sh\-$"; then
    isSHTask=false
  fi

  if echo "$*" | grep -q "\(\s\-\-\?\(help\|h\|version\|v\)\(\s\|$\)\)"; then
    disableSHTasks=true
  fi

  if [ "$isSHTask" = true ] && [ "$disableSHTasks" = false ]; then
      eval "woopack-runner-cli sh-validate $*"
      command=$(eval "woopack-runner-cli sh-run $*")
      if [ "$command" != "" ]; then
        # echo "> $command"
        eval "$command"
      fi
  else
    woopack-runner-cli "$@"
  fi
fi
